    android:layout_height="match_parent"
    android:background="@drawable/aftersplash"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <me.wangyuwei.particleview.ParticleView
            android:id="@+id/pv_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            pv:pv_host_text="Netto"
            pv:pv_particle_text_size="18dp"
            pv:pv_particle_text="Digital Solitions"
            pv:pv_text_anim_time="2000"
            pv:pv_spread_anim_time="2000"
            pv:pv_host_text_anim_time="2000" />



    </LinearLayout>



</LinearLayout>